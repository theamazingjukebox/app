name: Cleanup Only

on:
  push:
    branches: [ main ]
  pull_request:
    branches: [ main ]

jobs:
  cleanup:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout repo
        uses: actions/checkout@v3

      - name: Cleanup
        run: |
          rm -rf node_modules
          rm -rf build
          rm -rf dist
